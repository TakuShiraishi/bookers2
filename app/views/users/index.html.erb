<div class="cotainer">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', book: @book,user: @user %>
      </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
      <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.get_profile_image(100,100) %></br></td>
      <td><%= book.name %></td>
      <td><%= link_to "Show", user_path(book.id) %></td>
      </tr>
      <% end %>
      </table>
  </tbody>
    </div>
  </div>
</div>